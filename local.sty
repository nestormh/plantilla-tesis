    \fi
    \vskip 4em
    \begin{center}
      \ifx\@subject\@empty \else
        {\subject@font \@subject \par}%
        \vskip 1em
      \fi
      {\titlefont\Huge \@title\par}%
      \vskip 1em
      {\ifx\@subtitle\@empty\else\usekomafont{subtitle}\@subtitle\par\fi}%
      \vfill\null
	\begin{flushright} \large
	\emph{Co-directors:} \\
	  \codirector{}
	\end{flushright}
      \vfill\null
      {\Large \lineskip 0.75em
        \begin{tabular}[t]{c}
          \@author
        \end{tabular}\par
      }%
      \vskip 1em
      {\Large \@date \par}%
    \end{center}\par
  \end{titlepage}
}
